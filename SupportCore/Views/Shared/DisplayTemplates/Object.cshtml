        <div class="grid pt-10">
            <div class="row">
                @foreach (var prop in ViewData.ModelMetadata.Properties.Where(pm => pm.ShowForDisplay))
                {
                    if ((prop.TemplateHint == "AdminField") && (!User.IsInRole("Администратор")))
                    {
                        continue;
                    }

                    if (!prop.HideSurroundingHtml)
                    {
                        if (prop.DataTypeName == "Html")
                        {
                        <div class="row">
                            <dl class="horizontal">
                            <dt><label>@prop.GetDisplayName()</label></dt>
                            <dd>@Html.Display(prop.PropertyName)</dd>
                        </dl>
                        </div>
                            continue;
                        }
                            <div class="cell-6">
                                    <dl class="horizontal">             
                                        <dt><label>@prop.GetDisplayName()</label></dt>
                                        <dd>@Html.Display(prop.PropertyName)</dd>
                                    </dl>
                            </div>
                    }
                }
            </div>
          </div>