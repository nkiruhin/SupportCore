@model SupportCore.Models.Organization

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-light">Редактирование <span class="mif-pencil place-right"></span></h2>
<h4>Организация</h4>
<hr />
<form asp-action="Edit"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-update="#cell-content"
      data-ajax-mode="update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.EditorForModel()
    <button type="submit" class="button primary"><span class="mif-floppy-disk"></span> Сохранить</button>
    <a asp-action="Index"
       data-ajax="true"
       data-ajax-method="POST"
       data-ajax-update="#cell-content"
       data-ajax-mode="update"
       class="button secondary" data-role="button"><span class="mif-home"></span> К списку</a>
</form>

