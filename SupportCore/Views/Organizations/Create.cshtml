@model SupportCore.Models.Organization

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-light">Новая <span class="mif-plus place-right"></span></h2>
<h4>Организация</h4>
<hr />

<form asp-action="Create" id="OrgCreate"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-update="#cell-content"
      data-ajax-mode="update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.EditorForModel()
    <button type="submit" class="button primary" >Сохранить</button>
    <a asp-action="Index"
       data-ajax="true"
       data-ajax-method="POST"
       data-ajax-update="#cell-content"
       data-ajax-mode="update"
       class="button secondary" data-role="button">К списку</a>
</form>

<script>
    $(document).ready(function () {
        var form = $.validator.unobtrusive.parse('#OrgCreate');
    })
</script>

